{
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },
    "extends": ["airbnb", "prettier"],
    "rules": {
        "comma-dangle": "off",
        "semi": "off",
        "import/prefer-default-export": "off"
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    }
}